.container {
  position: relative;
  height: 100vh;
  background-color: #F9F9F9;
}

.input-list-wrap {
  padding-top: 20rpx;
  box-shadow:0px 2px 4px 0px rgba(0,0,0,0.2);
}

.input-list {
  background-color: #fff;
}

.input-wrap {
  /* margin: 0 42rpx; */
  margin-left: 42rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  line-height: 44rpx;
  border-bottom: 2rpx solid #E3E3E3;

  display: flex;
  align-items: center;
}

.input-wrap:first-child {
  padding: 8rpx 0;
}

.input-wrap:last-child {
  border-bottom: 0;
}

.title {
  /* font-weight: bold; */
  color: #333;
}

.input-wrap input {
  flex: 1;
  margin: 0 20rpx;
  color: #000;
}

.getcode {
  box-sizing: border-box;
  width: 202rpx;
  padding: 20rpx 42rpx 20rpx 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  text-align: left;
  color: #999;
}

.await {
  padding-right: 14rpx;
}

.finish {
  position: absolute;
  bottom: 94rpx;
  left: 80rpx;
  right: 80rpx;
}

.finish-btn {
  font-size:36rpx;
  border:0rpx;
  border-radius:40rpx;
  outline:0rpx;
  color: #fff;
  background-color:#31C27C;
}